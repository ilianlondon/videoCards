<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>PRODUCTS</title>
    <link rel="stylesheet" href="css/style.css">
</head>

<body>
    <header id="header">
        <nav class="menu">
            <div class="logo">
                <img src="src/rog-strix.png" alt="ROG Strix">
                <a href="/" class="btn-menu" id="btn-menu">
                    <i class="icono fa fa-bars" aria-hidden="true">
                    </i>
                </a>
            </div>

            <div class="enlaces" id="enlaces">
                <a class="products" href="/">Products</a>
                <a class="ROG" href="#">ROG</a>
                <a class="Service" href="#">Service</a>
            </div>
            <div class="cont-nonav" id="cont-nonav">
                <div class="nonav">
                    <div class="buscador">
                        <input type="text" class="search" name="search" id="" placeholder="Search...">
                        <a class="recuadro-lupa" href="#">
                            <img class="icon-lupa" src="src/lupa.png" alt="">
                        </a>

                    </div>
                    <a class="tienda" href="/checkout">
                        <img src="src/shopping-card.png" alt="" class="shopping-card">
                        <span class="carri" id="carri">0</span>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <section class="route">
        <p>
            <a class="route-home" href="/">Homepage</a>>
            <a class="route-products" href="/">Products</a>
        </p>
    </section>
    <section class="productos">
        <div class="filter">
            <h2 class="filterBy">FILTER BY</h2>
            <div class="pricerange-cont">
                <h3 class="price">Price</h3>
                <div class="cont-slider-apply">

                    <div class="cont-slider">
                        <input type="range" name="" id="slider" min="0" max="600">
                        <input type="range" name="" id="sliderUno" min="601" max="1200">

                    </div>

                    <div class="cont-apply">
                        <button class="minMax">Apply</button>
                    </div>

                </div>

            </div>
            <div class="category-cont">
                <h3 class="category">Category</h3>

                <label class="container">
                    <a href="/">
                        Todas
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>

                <label class="container">
                    <a href="/?category=AMD Series">
                        AMD Series
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">
                    <a href="/?category=NVIDIA Series">
                        NVIDIA Series
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>



            </div>
            <div class="gpu-cont">
                <h3 class="gpu">GPU</h3>
                <label class="container">
                    <a href="/?gpu=Radeon RX VEGA Series">
                        Radeon™ RX VEGA Series
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">
                    <a href="/?gpu=Radeon RX 500 Series">
                        Radeon™ RX 500 Series
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">GeForce® 1080 Series
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">GeForce® 1060 Series
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">GeForce® 1050 Series
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
            </div>
            <div class="memory-cont">
                <h3 class="memory">Video Memory</h3>
                <label class="container">
                    <a href="/?memory=11Gb">
                        Above 8 Gb
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">
                    <a href="/?memory=8Gb">
                        8 Gb
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">
                    <a href="/?memory=6Gb">
                        6 Gb
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">
                    <a href="/?memory=4Gb">
                        4 Gb
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>
                <label class="container">
                    <a href="/?memory=2Gb">
                        2 Gb
                    </a>
                    <input type="checkbox">
                    <span class="checkmark"></span>
                </label>

            </div>
        </div>
        <div class="content-products">
            <div class="list-products">
                <div class="mostrar">
                    {{#each videocards}}
                    <div class="tarjeta" data-id="{{this._id}}">

                        <div class="imagen" style="background-image: url({{image}});"></div>
                        <div class="descri">
                            <a href="/product/{{name}}">
                                <p class="nameDesc">
                                    {{name}}
                                </p>
                            </a>
                            <p class="vidMem">
                                <span>Video Memory:</span> {{memory}}
                            </p>
                            <p class="gpuDesc">
                                <span>GPU:</span> {{gpu}}
                            </p>
                            <p class="priceDesc">
                                ${{price}}
                            </p>

                        </div>
                        <div class="boton" align="center">
                            <button onclick="sweet()" class="add">Add To Cart</button>
                        </div>

                    </div>
                    {{/each}}
                </div>

            </div>
        </div>
    </section>
</body>
<script>
    function sweet() {
        swal({
            title: "Added to Cart",
            text: "press 'OK' to continue buying",
            //imageUrl: 'https://s3-ap-southeast-1.amazonaws.com/gw-thinksaas-deploy/website/images/checkmark-gif.gif'
            //imageUrl: 'https://i.stack.imgur.com/7VozH.gif'
            imageUrl: 'http://www.yerha.com/pages/img/chatsim/shop.gif'
        });
    }
</script>
<script src="js/jquery-3.3.1.min.js"></script>
<script src="js/headroom.js"></script>
<script src="/js/sweet.js"></script>
<script src="js/cliente.js"></script>
<script src="js/productos.js"></script>
<script src="js/index.js"></script>

</html>